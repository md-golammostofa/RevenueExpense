@model RevenueAndExpense.BO.ViewModels.VmNavBar
@{ 
    Layout = null;
}

<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a href="#" title="@User.OrgName"><i class="far fa-building"></i>@User.OrgName</a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a href="#" title="@User.OrgName"><i class="far fa-building"></i></a>
        </div>
        <ul class="sidebar-menu" style="font-size:medium">
            @if (User.OrgId == 1)
            {
                <li class="active"><a class="nav-link" href="/Admin/Index"><i class="fas fa-fire"></i><span style="font-size:medium">ড্যাশবোর্ড</span></a></li>

            }
            else
            {
                <li class="active"><a class="nav-link" href="/User/Index"><i class="fas fa-fire"></i><span style="font-size:medium">ড্যাশবোর্ড</span></a></li>
            }
            
            @foreach (var mainmenu in Model.MenuItems)
            {
                <li class="dropdown">
                    <a href="#" class="nav-link has-dropdown" data-toggle="dropdown"><i class="fas fa-th-large"></i><span>@mainmenu.MainmenuName</span></a>
                    <ul class="dropdown-menu">
                        @foreach (var submenu in mainmenu.SubmenuItems)
                        {
                            <li><a class="nav-link" href="/@submenu.ControllerName/@submenu.ActionName"><i class="fas fa-list-alt"></i><span>@submenu.SubmenuName</span></a></li>
                        }
                    </ul>
                </li>
            }
        </ul>
    </aside>
</div>