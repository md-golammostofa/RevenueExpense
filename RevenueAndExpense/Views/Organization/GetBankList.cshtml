@model IEnumerable<RevenueAndExpense.BO.Models.Bank>
@{
    Layout = null;
    int sl = 0;
    string activity = string.Empty;
}

<table class="table table-bordered table-hover table-sm table-responsive-lg" id="tblBankList">
    <thead class="btn-info">
        <tr class="text-center">
            <th>SL No.</th>
            <th class="hide">BankId</th>
            <th>ব্যাংকের নাম</th>
            <th>শাখা</th>
            <th>একাউন্ট নম্বর</th>
            <th>বর্তমান অবস্থা</th>
            <th>এন্ট্রি উইজার</th>
            <th>অ্যাকশান</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            activity = item.IsActive ? "সচল আছে" : "বন্ধ আছে";
            <tr>
                <td class="text-center">@sl</td>
                <td class="hide">@item.BankId</td>
                <td>@item.BankName</td>
                <td>@item.BranchName</td>
                <td>@item.AccountNo</td>
                <td>@activity</td>
                <td class="text-center">@item.EntryUser</td>
                <td>
                    <a href="#" class="btn btn-sm btn-icon btn-warning data-edit-bankitem" data-edit-bankitem="@item.BankId" >এডিট</a>
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center">
                <td colspan="8">কোন ডাটা পাওয়া যায়নি...</td>
            </tr>
        }
    </tbody>
</table>

