@model IEnumerable<VmCashToBankAndBankToCash>
@{
    ViewBag.Title = "";
    Layout = null;
    int sl = 0;
}

<table class="table table-bordered table-hover table-sm table-responsive-lg" id="tblBankCashList">
    <thead class="btn-info">
        <tr class="text-center">
            <th>SL No.</th>
            <th class="hide">Id</th>
            <th>ব্যাংকের নাম</th>
            <th class="hide"></th>
            <th>একাউন্ট নম্বর</th>
            <th>ফান্ডের নাম</th>
            <th class="hide"></th>
            <th>ব্যাংক জমা</th>
            <th>ব্যাংক উত্তোলন</th>
            <th>চেক নম্বর</th>
            <th>মন্তব্য</th>
            <th>এন্ট্রি তারিখ</th>
            <th>এন্ট্রি উইজার</th>
            <th>অ্যাকশান</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            sl = sl + 1;
            <tr>
                <td class="text-center">@sl</td>
                <td class="hide">@item.Id</td>
                <td>@item.BankName</td>
                <td class="hide">@item.BankId</td>
                <td class="text-center">@item.AccountNo</td>
                <td>@item.FundNameBN</td>
                <td class="hide">@item.FundInfoId</td>
                <td>@item.CashToBank</td>
                <td>@item.BankToCash</td>
                <td>@item.ChequeNo</td>
                <td>@item.Remark</td>
                <td class="text-center">@item.BankDate</td>
                <td class="text-center">@item.EntryUser</td>
                <td class="text-center">
                    <a href="#" class="btn btn-sm btn-icon btn-warning data-edit-bankcashitem" data-edit-bankcashitem="@item.Id">এডিট</a>
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {
            <tr class="text-center empty-row">
                <td colspan="10">কোন ডাটা পাওয়া যায়নি...</td>
            </tr>
        }
    </tbody>
</table>


